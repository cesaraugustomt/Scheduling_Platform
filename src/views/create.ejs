    <link rel="stylesheet" href="./styles/create.css">
    <title>Cadastro</title>
</head>
<body>

    <hr>
    
    <div class="top">
        <h2>Full Calendar</h2>
    </div>



    <div class="container">
        <h1>Cadastro</h1>

        <form method="post" action="create">

            <input type="text" name="name" id="name" placeholder="Nome do paciente" class="form-control" required>

            <input type="email" name="email" id="email" placeholder="Email@email.com" class="form-control" required >

            <input type="text" name="description" id="description" placeholder="Descrição" class="form-control" required>

            <input type="text" name="cpf" id="cpf" placeholder="CPF" class="form-control cpf">  

           <input type="date" name="date" id="date" placeholder="13/02/2089" class="form-control" required>

            <input type="time" name="time" id="time" class="form-control" required>
    
           
            <a href=""><button class="btn btn-info btn-block" id="button">Agendar</button></a>
    
        </form>


    </div>
    
    <a class="back" type="submit" href="/">
        <img class="back_icon" src="img/back.svg" alt="more"/>
    </a>
   
    
</body>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

